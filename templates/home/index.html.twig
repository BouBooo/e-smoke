{% extends 'base.html.twig' %}


{% block body %}

<div align="center" class="container mb-6 mt-4">
    <h1>Bienvenue sur E-Smoke</h1>


    <h3>Découvrez nos nouveautés</h3>
</div>

<div class="home-conteneur mt-4 mb-4">
    
    {% for liquid in liquids %}
        <div class="block">
            
            <img width="150" src="{{ vich_uploader_asset(liquid, 'imageFile') }}"/>
            <h5>{{ liquid.name }}</h5>
            <p>Saveur {{ liquid.flavor }}</p>
            <a href="{{ path('show_liquid', { id : liquid.id}) }}" class="btn btn-info">Voir</a>
        </div>
    
    {% endfor %}
</div>
    <div align="center">
        <a class="btn btn-secondary" href="{{ path('liquids') }}">Voir tous les produits</a>
    </div>

<div class="jumbotron">
    <div class="home-conteneur">
        <div class="block"> 
            <h4>4.8/5 - AVIS CLIENTS</h4>
            <p> + De 50 000 vapoteurs satisfaits !</p>
        </div>

        <div class="block">
            <h4>LIVRAISON GRATUITE</h4>
            <p>Sans minimum d'achat</p>
        </div>

        <div class="block">
            <h4>LIVRAISON EXPRESS</h4>
            <p>Expédition le jour même avant 14h00</p>
        </div>

        <div class="block">
            <h4>PAIEMENT 100% SÉCURISÉ</h4>
            <p>CB, VISA, Paypal...</p>
        </div>
    </div>
</div>


<div class="home-conteneur mt-4">
    <div class="block">
        <img src="{{ asset('assets/img/home_1.png') }}" />
    </div>

    <div class="block">
        <img src="{{ asset('assets/img/home_2.png') }}" />
    </div>
</div>

<section id="contact">
    <div align="center">
        <div class="jumbotron">
            <h3>Contact</h3>
            <hr width="20%">
            <div class="d-flex justify-content-center" style="">
                    {{ form_start(form) }}
                <div class="row mt-4">
                    <div class="col-5">
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="col-5">
                        {{ form_row(form.lastname) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-5">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.message) }}
                    </div>
                    <button type="submit" class="btn btn-info">Envoyer</button>

                    {{ form_end(form) }}
                </div>
            </div>
            <div class="container mt-4" style="width:25%">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
