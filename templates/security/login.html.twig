{% extends 'base.html.twig' %}


{% block body %}

<div class="container mt-4 ml-8">
    <form action="{{ path('login') }}" method="POST">
      <div class="form-group">
        <input type="text" placeholder="Votre adresse email" required name="_username" class="form-control">
      </div>
      <div class="form-group">
        <input type="password" placeholder="Votre mot de passe" required name="_password" class="form-control">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-info">Connexion</button>
      </div>
    </form>
  <div class="mt-4">Pas encore inscrit ? <a href="{{ path('registration') }}">Inscrivez-vous ici</a></div>
</div>



{% endblock %}